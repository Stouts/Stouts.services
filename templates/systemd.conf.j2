# This file was generated by Ansible for {{ ansible_fqdn }}
# Do NOT modify this file by hand!

{% set srv = item.value %}

[Unit]
Description={{srv.description|default('The service')}}
After=network.target
Requires=network.target

[Service]
ExecStart={{srv.exec}}
WorkingDirectory={{srv.chdir|default(services_chdir)}}
User={{srv.user|default(services_user)}}
{% if srv.pidfile|default(False) %}
PIDFile={{srv.pidfile}}
{% endif %}
{{ srv.opts|default('') }}

Restart=always
RestartSec=5
TimeoutSec=5

[Install]
WantedBy=multi-user.target
